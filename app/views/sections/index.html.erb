<% @page_title = "Sections" %>

<%= link_to("<< Back to pages", {controller: 'pages', action: 'index', :subject_id => @page.subject_id}, :class => 'back-link') %>

<div class="sections index"> 
	<h2>Sections</h2>

	<%= link_to("Add New Section", {controller: 'sections', action: 'new', :page_id => @page.id}, :class => 'action new') %>

	<table class="listing" summary="Sections list">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Section</th>
			<th>Page</th>
			<th>Visible</th>
			<th>Content Type</th>
			<th>Content</th>
			<th>Actions</th>
		</tr>

		<% @sections.each do |section| %>

		<tr>
			<td><%= section.position %></td>
			<td><%= section.page.name if section.page %></td>
			<td><%= section.name %></td>
			<td class="center"> <%= status_tag(section.visible) %></td>
			<td class="center"><%= section.content_type%></td>
			<td class="center"><%= section.content%></td>
			<td class="actions">
				<%= link_to("Show", {controller: 'sections', action: 'show', id: section.id, :page_id => @page.id}, :class => "action show") %>
				<%= link_to("Edit", {controller: 'sections', action: 'edit', id: section.id, :page_id => @page.id}, :class => "action edit")%>
				<%= link_to("Delete", {controller: 'sections', action: 'delete', id: section.id, :page_id => @page.id}, :class => "action delete" )%>
			</td>
		</tr>
		<% end %>

	</table>

</div>
