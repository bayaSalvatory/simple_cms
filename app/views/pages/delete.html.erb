<%= link_to("<< Back to List", {controller: 'pages', action: 'index', :subject_id => @subject.id}, :class => 'back-link') %>

<div class="pages delete">
	
	<h2>Delete Subject</h2>

	<%= form_for(:page, url: {controller: 'pages', action: 'destroy', id: @page.id, :subject_id => @subject.id}) do |f| %>

	<p>Are you sure you want to permanently delete this page?</p>

	<p class="reference-name"><%= @page.name %></p>

	<div class="form-buttons">
		<%= submit_tag('Delete Page') %>
	</div>

	<% end %>
</div>
